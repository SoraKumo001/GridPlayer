<UserControl x:Class="GridPlayer.VolumeController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GridPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="128"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="volumeOn" Click="volumeOn_Click">
            <Image Source="/Images/outline_volume_up_white_48dp.png"/>
        </Button>
        <Button x:Name="volumeOff" Click="volumeOff_Click" Visibility="Hidden">
            <Image Source="/Images/outline_volume_off_white_48dp.png"/>
        </Button>
        <Grid Grid.Column="1" MouseDown="Grid_MouseDown" Background="Transparent" >
            <ProgressBar x:Name="progressBar" Height="8" VerticalAlignment="Center" Margin="8,0,8,0" Value="100"/>
        </Grid>
    </Grid>
</UserControl>
